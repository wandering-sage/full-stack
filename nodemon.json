{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "dist"
  ],
  "verbose": true,
  "execMap": {
    "js": "node"
  },
  
  "runOnChangeOnly": false,
  "watch": [
    "src/**/*.js",
    "src/**/*.graphql",
    "src/**/*.gql",
    "src/**/*.css",
    "src/**/*.html"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json,graphql,css,html"
}
